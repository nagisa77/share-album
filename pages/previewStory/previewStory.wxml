<view class="container">
  <view class="top-bar">
    <view class="top-bar-content" bindtap="goBack">
      <icon class="weui-icon-back-arrow" size="50"></icon>
    </view>
  </view>
  <swiper
    class="swiper"
    current="{{current}}"
    indicator-dots="false"
    autoplay="false"
    interval="5000"
    duration="500"
    bindchange="onSwiperChange"
  >
    <block wx:for="{{imagePaths}}" wx:key="index">
      <swiper-item>
        <image
          src="{{item}}"
          mode="contain"
          class="image"
          bindload="onImageLoad"
          catchtap="onImageTap"
        />
      </swiper-item>
    </block>
  </swiper>
</view>