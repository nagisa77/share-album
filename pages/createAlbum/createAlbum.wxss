/* 引入WeUI样式 */
@import "../../weui-wxss/dist/style/weui.wxss";

.container {
  padding-top: 150px;
  padding-bottom: 100px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-height: 100vh;
}

.content {
  flex: 1;
}

.coverImage {
  border-radius: 10px;
}

.avatar-wrapper {
  width: 50px;
  height: 50px;
  border-radius: 50%;
  overflow: hidden;
  padding: 0;
  border: none;
  background: none;
}

.imgButton {
  overflow: hidden;
  padding: 0;
  border: none;
  background: none;
}

.userAvatar {
  width: 50px;
  height: 50px;
}

.create-button {
  margin-top: 100px;
}