@import "../../weui-wxss/dist/style/weui.wxss";

.container {
  display: flex;
  flex-direction: column;
  margin: 0;
  padding: 0;
  height: 100vh;
}

.header {
  width: 100%;
  position: relative;
}

.top-bar {
  position: fixed;
  top: 0;
  width: 100%;
  height: 100px;
  background: rgba(255, 255, 255, 0.8);
  backdrop-filter: blur(10px);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 999; 
  transition: opacity 0.3s ease;
}

.top-bar-content .weui-icon-camera {
  color: black;
  position: fixed;
  top: 52px;
  left: 20px;
  width: 30px;
  height: 30px;
  z-index: 1000; 
  display: flex;
  align-items: center;

}

.top-bar-content {
  font-size: 18px;
  color: black;
}

.album-bg {
  width: 100%;
  height: 100vw;
  display: block;
}

.album-info {
  position: absolute;
  bottom: -15px;
  right: 10px;
  display: flex;
  align-items: center;
  padding: 5px;
  border-radius: 5px;
}

.album-name {
  color: white;
  font-size: 18px;
  margin-right: 10px;
}

.album-avatar {
  width: 60px;
  height: 60px;
  border-radius: 10px;
}

.content {
  flex: 1 1 auto;
  width: 100%;
  padding: 10px;
  overflow-y: auto; 
}

.timeline-item {
  display: flex;
  margin-bottom: 20px;
}

.timeline-time {
  width: 20%;
  text-align: right;
  padding-right: 10px;
  font-size: 14px;
  color: #888;
}

.timeline-content {
  width: 80%;
  padding-left: 10px;
  border-left: 2px solid #ddd;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}

.user-avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 10px;
}

.user-name {
  font-size: 16px;
  font-weight: bold;
}

.content-text {
  margin-bottom: 5px;
}

.images-container {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  gap: 0px;
  margin-bottom: 0px;
}

.content-image {
  background-color: white;
  padding: 1px;
}

.album-bg-overlay {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 50px;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.3) 100%);
}

.default-bg {
  width: 100%;
  height: 100vw;
  background-color: #ccc;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}

.default-bg-text {
  font-size: 18px;
  color: white;
}

.content-image.large {
  width: 238px;
  height: 238px;
}

.content-image.medium {
  width: 118px;
  height: 118px;
}

.content-image.mediumx {
  width: 78px;
  height: 78px;
}

.content-image.small {
  width: 58px;
  height: 58px;
}