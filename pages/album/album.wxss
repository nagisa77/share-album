@import "../../weui-wxss/dist/style/weui.wxss";

.container {
  display: flex;
  flex-direction: column;
  margin: 0; /* 去掉默认的外边距 */
  padding: 0; /* 去掉默认的内边距 */
}

.header {
  width: 100%;
  position: relative;
}

.album-bg {
  width: 100%;
  height: 100vw; /* 正方形 */
  display: block;
}

.album-info {
  position: absolute;
  bottom: -20px; /* 向下超出背景图30% */
  right: 10px;
  display: flex;
  align-items: center;
  /* background: rgba(0, 0, 0, 0.5); 添加半透明背景 */
  padding: 5px;
  border-radius: 5px;
}

.album-name {
  color: white;
  font-size: 18px;
  margin-right: 10px;
}

.album-avatar {
  width: 60px;
  height: 60px;
  border-radius: 10px; /* 正方形头像 */
  /* border: 2px solid white; 给头像添加白色边框 */
}

.content {
  flex: 1 1 auto; /* 使内容区域填满剩余空间 */
  width: 100%;
  padding: 10px;
  overflow-y: auto; /* 使内容区域可以滚动 */
}

.timeline-item {
  display: flex;
  margin-bottom: 20px;
}

.timeline-time {
  width: 20%;
  text-align: right;
  padding-right: 10px;
  font-size: 14px;
  color: #888;
}

.timeline-content {
  width: 80%;
  padding-left: 10px;
  border-left: 2px solid #ddd;
}

.user-info {
  display: flex;
  align-items: center;
  margin-bottom: 5px;
}

.user-avatar {
  width: 30px;
  height: 30px;
  border-radius: 50%;
  margin-right: 10px;
}

.user-name {
  font-size: 16px;
  font-weight: bold;
}

.content-text {
  margin-bottom: 5px;
}

.images-container {
  display: flex;
  flex-direction: column;
}

.row {
  display: flex;
  gap: 0px;
  margin-bottom: 0px;
}

.content-image {
  background-color: white; /* 设置背景颜色为白色 */
  padding: 1px; /* 设置内边距为1px */
}

.album-bg-overlay {
  position: absolute;
  bottom: 0;
  width: 100%;
  height: 50px;
  background: linear-gradient(to bottom, rgba(0, 0, 0, 0) 0%, rgba(0, 0, 0, 0.8) 100%);
}

.content-image.large {
  width: 238px; /* 原来的尺寸减去内边距的总和 */
  height: 238px;
}

.content-image.medium {
  width: 118px;
  height: 118px;
}

.content-image.mediumx {
  width: 78px;
  height: 78px;
}

.content-image.small {
  width: 58px;
  height: 58px;
}